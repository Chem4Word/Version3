<UserControl x:Class="Chem4Word.Controls.TagControl.TagControlItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chem4Word.Controls.TagControl"
             mc:Ignorable="d"
             d:DesignHeight="25" d:DesignWidth="150" Height="25">
    <Grid>
        <Border x:Name="TagItemBorder" CornerRadius="10" BorderThickness="1" BorderBrush="Black" Padding="5,0" Background="White" Height="25">
            <DockPanel>
                <Label x:Name="TagItemLabel" Content="Label" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="5,0,0,0" Margin="0,3,10,4" />
                <Image x:Name="TagRemoveImage" Source="XDMoreDetailsAlert.png" Width="18" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>