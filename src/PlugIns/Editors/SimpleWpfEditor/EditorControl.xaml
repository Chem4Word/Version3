<UserControl x:Class="Chem4Word.Editor.SimpleWpfEditor.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chem4Word.Editor.SimpleWpfEditor"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Loaded="UserControl_Loaded">
    <Grid ShowGridLines="False" RenderTransformOrigin="0.502,0.685">
        <Grid.RowDefinitions>
            <RowDefinition Height="257*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch"
                     Margin="10,10,10,10"
                     TextWrapping="NoWrap"
                     AcceptsReturn="True"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas" />
        <Button x:Name="button" Content="OK" Height="26" Margin="0,0,10,10" VerticalAlignment="Bottom" RenderTransformOrigin="0.638,0.771" HorizontalAlignment="Right" Width="75" Click="button_Click" Grid.Column="2" Grid.Row="1" />
    </Grid>
</UserControl>